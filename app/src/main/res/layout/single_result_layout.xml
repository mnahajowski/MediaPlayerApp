<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/root_view_layout_height"
        android:layout_margin="@dimen/root_view_layout_margin"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/single_result_relative_layout_layout_height"
            android:layout_margin="@dimen/single_result_relative_layout_layout_margin"
            android:clickable="false">

            <TextView
                android:id="@+id/number_textView"
                android:layout_width="@dimen/number_textView_layout_width"
                android:layout_height="match_parent"
                android:textSize="@dimen/history_text_size" />

            <TextView
                android:id="@+id/date_textView"
                android:layout_width="@dimen/date_layout_width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/height_textView"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/date_marginStart"
                android:layout_marginTop="@dimen/date_margin_top"
                android:layout_marginBottom="@dimen/date_margin_bottom"
                android:textSize="@dimen/history_text_size"
                tools:ignore="UnknownId" />

            <TextView
                android:id="@+id/bmi_textView"
                android:layout_width="@dimen/bmi_layout_width"
                android:layout_height="wrap_content"
                android:layout_above="@+id/date_textView"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/bmi_layout_marginStart"
                android:layout_marginEnd="@dimen/bmi_layout_marginEnd"
                android:layout_marginBottom="@dimen/bmi_layout_marginBottom"
                android:textSize="@dimen/history_text_size" />

            <TextView
                android:id="@+id/mass_textView"
                android:layout_width="@dimen/mass_layout_width"
                android:layout_height="wrap_content"
                android:layout_above="@+id/date_textView"
                android:layout_marginStart="@dimen/mass_layout_marginStart"
                android:layout_marginBottom="@dimen/mass_layout_marginBottom"
                android:layout_toEndOf="@id/height_tv"
                android:textSize="@dimen/history_text_size" />

            <TextView
                android:id="@+id/unitTextView"
                android:layout_width="@dimen/unit_layout_width"
                android:layout_height="wrap_content"
                android:layout_above="@+id/date_textView"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/unit_layout_marginStart"
                android:layout_marginEnd="@dimen/unit_layout_marginEnd"
                android:layout_marginBottom="@dimen/unit_layout_marginBottom"
                android:layout_toEndOf="@+id/mass_textView"
                android:textSize="@dimen/history_text_size" />

            <TextView
                android:id="@+id/height_tv"
                android:layout_width="@dimen/height_layout_width"
                android:layout_height="wrap_content"
                android:layout_above="@+id/date_textView"
                android:layout_marginStart="@dimen/height_layout_marginStart"
                android:layout_marginBottom="@dimen/height_layout_marginBottom"
                android:layout_toEndOf="@+id/bmi_textView"
                android:textSize="@dimen/history_text_size" />


        </RelativeLayout>


    </LinearLayout>
</layout>